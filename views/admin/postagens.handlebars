<h2>Lista de postagens:</h2>
<hr>
<a href="/admin/postagens/add">
    <button class="btn btn-success">Nova Postagem</button>
</a>


{{!-- Listar as postagens --}}

{{#each postagens}}

    <div class="card">
        <div class="card-body">
            <h4>{{titulo}}</h4>
            <p>DESCRIÇÃO: {{descricao}}</p>
            <small>DATA: {{data}}</small><br>
            <small>CATEGORIA: {{categoria.nome}}</small><br>

            {{!-- Botao de ediçao de postagens --}}
            <a href="/admin/postagens/edit/{{_id}}">
                <button class="btn btn-success mt-3">Editar postagem</button>
            </a>

            {{!-- Botao para excluir postagem --}}

            <a href="/admin/postagens/deletar/{{_id}}">
                <button class="btn btn-danger mt-3">Deletar postagem</button>
            </a>
        </div>
    </div>

{{else}}
    <p>Nenhuma postagem registrada!</p>

{{/each}}