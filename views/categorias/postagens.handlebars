<h1>{{categoria.nome}}</h1>

{{#each postagens}}
<div class="card mt-4">
    <div class="card-body">
        <h3>{{titulo}}</h3>
        <p>{{descricao}}</p>
        <a href="/postagem/{{slug}}">
            <button class="btn btn-success">Leia mais</button>
        </a>
        <hr>
         {{!-- <small>Categoria: {{categoria.nome}}</small> <br> --}}
        <small>Data de publicação: {{data}}</small>
        <hr>
    </div>
</div>

{{else}}

    <h5>Nenhuma postagem recente!</h5>

{{/each}}